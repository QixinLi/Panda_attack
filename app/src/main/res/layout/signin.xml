<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signin_signup_bg">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signin_tel_edit"
        android:textColor="#FFFFFF"
        android:scaleType="fitXY"
        android:maxLength="11"
        android:phoneNumber="true"
        android:hint="Tel"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signin_pwd_edit"
        android:textColor="#FFFFFF"
        android:password="true"
        android:scaleType="fitXY"
        android:hint="Password"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signin_checklg"
        android:text="记住密码"
        android:textColor="#FFFFFF"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signin_autolg"
        android:text="自动登录"
        android:textColor="#FFFFFF"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/signin_bt"
        android:id="@+id/signin_signinbt"/>


</RelativeLayout>